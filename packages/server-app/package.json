{
   "name": "server-app",
   "version": "0.0.1",
   "description": "Awesome project developed with TypeORM.",
   "private": true,
   "main": "src/index.ts",
   "engines": {
      "node": ">=8.0.0"
   },
   "devDependencies": {
      "ts-node": "10.7.0",
      "@types/node": "^16.11.10",
      "typescript": "^4.5.2",
      "@types/faker": "^6.6.9",
      "@types/pino": "^6.3.11",
      "@types/swagger-jsdoc": "^6.0.1",
      "@types/swagger-ui-express": "^4.1.3"
   },
   "dependencies": {
      "express": "4.19.1",
      "uuid": "9.0.1",
      "typeorm": "0.3.20",
      "cors": "^2.8.5",
      "debug": "4.3.4",
      "morgan": "~1.10.0",
      "reflect-metadata": "0.2.1",
      "sqlite3": "5.1.7",
      "body-parser": "1.20.2",
      "class-validator": "0.14.1",
      "class-validator-jsonschema": "5.0.0",
      "faker": "6.6.6",
      "chalk": "5.3.0",
      "path": "^0.12.7",
      "swagger-ui-express": "5.0.0",
      "swagger-jsdoc": "6.2.8",
      "dayjs": "^1.10.7",
      "pino": "8.19.0",
      "pino-pretty": "^7.1.0",
      "zod": "^3.9.8"
   },
   "scripts": {
      "typeorm": "typeorm-ts-node-esm",
      "start": "ts-node src/index.ts",
      "schema:init": "ts-node --project ./tsconfig.json ./../../node_modules/typeorm/cli.js schema:init",
      "schema:drop": "ts-node --project ./tsconfig.json ./../../node_modules/typeorm/cli.js schema:drop --d ./../../packages/server-app/src/data-source-cli.ts",
      "schema:sync": "ts-node --project ./tsconfig.json ./../../node_modules/typeorm/cli.js schema:sync --d ./../../packages/server-app/src/data-source-cli.ts",
      "seed:config": "ts-node --project ./tsconfig.json ./../../node_modules/typeorm-seeding/dist/cli.js config",
      "seed:run": "ts-node --project ./tsconfig.json ./../../node_modules/typeorm-seeding/dist/cli.js seed",
      "db:setup": "npm run schema:drop && npm run schema:sync && npm run seed:config && npm run seed:run",

      "docker:schema:init": "ts-node --project ./tsconfig.json ./node_modules/typeorm/cli.js schema:init",
      "docker:schema:drop": "ts-node --project ./tsconfig.json ./node_modules/typeorm/cli.js schema:drop --d ./src/data-source-cli.ts",
      "docker:schema:sync": "ts-node --project ./tsconfig.json ./node_modules/typeorm/cli.js schema:sync --d ./src/data-source-cli.ts",
      "docker:seed:config": "ts-node --project ./tsconfig.json ./node_modules/typeorm-seeding/dist/cli.js config",
      "docker:seed:run": "ts-node --project ./tsconfig.json ./node_modules/typeorm-seeding/dist/cli.js seed",
      "docker:db:setup": "npm run docker:schema:drop && npm run docker:schema:sync && npm run docker:seed:config && npm run docker:seed:run"
   }
}
